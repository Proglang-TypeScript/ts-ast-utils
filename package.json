{
  "name": "@proglang/ts-ast-utils",
  "version": "1.3.0",
  "description": "Utilities for TypeScript AST traversals",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "test": "jest",
    "test:clear-cache": "jest --clearCache",
    "lint": "eslint --max-warnings 0 'src/**/*.ts'",
    "prettier": "prettier --write 'src/**/*.ts'",
    "script": "ts-node",
    "prepublishOnly": "npm run build",
    "package:local": "npm run build && npm pack && mkdir -p packages.local && mv ./proglang-ts-ast-utils*.tgz packages.local/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint"
    }
  },
  "keywords": [
    "typescript",
    "ast"
  ],
  "author": "fcristiani",
  "license": "BSD-3-Clause",
  "repository": {
    "url": "git://github.com/proglang/ts-ast-utils.git"
  },
  "files": [
    "dist/"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "dependencies": {
    "typescript": "^3.9.7"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.4.1",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.2",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0"
  }
}
